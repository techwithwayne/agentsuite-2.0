{
  "name": "postpress-ai",
  "private": true,
  "type": "module",
  "devDependencies": {
    "esbuild": "^0.23.0"
  },
  "scripts": {
    "build:dev": "esbuild assets/js/src/index.js --bundle --sourcemap --outfile=assets/js/admin.js --format=iife --target=es2019 --legal-comments=inline",
    "build:prod": "esbuild assets/js/src/index.js --bundle --minify --sourcemap --outfile=assets/js/admin.min.js --format=iife --target=es2019",
    "build": "npm run build:dev && npm run build:prod",
    "dev": "esbuild assets/js/src/index.js --bundle --sourcemap --outfile=assets/js/admin.js --format=iife --target=es2019 --watch --legal-comments=inline"
  }
}
